# =================================================
# .env file for LOCAL development (in project root)
# =================================================
# These variables are injected into the frontend at build time.

# Tells the UI to connect to the emulator instead of live Firebase
VITE_USE_AUTH_EMULATOR=false

# Skip login page and Firebase auth entirely (local dev convenience)
VITE_SKIP_LOGIN=true

# The host and port where the browser can find the emulator
# VITE_FIREBASE_EMULATOR_HOST is not used when auth emulator is disabled

# Firebase project configuration
VITE_FIREBASE_PROJECT_ID=stream-watcher-dev
VITE_FIREBASE_API_KEY=fake-api-key
VITE_FIREBASE_AUTH_DOMAIN=localhost
VITE_FIREBASE_STORAGE_BUCKET=stream-watcher-dev.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=fake-sender-id
VITE_FIREBASE_APP_ID=fake-app-id 